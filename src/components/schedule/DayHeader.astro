---
import H3 from "../H3.astro";

type Props = {
  date: string;
};

const { date } = Astro.props;
let weekday = new Date(date).toLocaleDateString("no-NO", {
  weekday: "long",
});
weekday = weekday.charAt(0).toUpperCase() + weekday.slice(1);
---

<H3>
  <time datetime={date} class="text-2xl mb-4 mt-8">
    {weekday}
  </time>
</H3>
