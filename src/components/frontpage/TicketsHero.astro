---
import { YouTube } from "astro-lazy-youtube-embed";
import Hero from "./Hero.astro";
import Button from "../Button.astro";

interface Props {
  class?: string;
}

const { class: classNames } = Astro.props;
---

<Hero image="/images/blurry-lights.jpg" class={classNames}>
  <YouTube
    class="rounded-3xl"
    title="The Gathering 2026 - TG RE:UNION - Trailer"
    videoId="mtDVFcYip8A"
    allow="autoplay"
    embedParams={{
      autoplay: 1,
      playslinline: 1,
      rel: 0,
      // @ts-ignore
      mute: 1,
    }}
    slot="overlay"
  />
  <div class="flex flex-col text-left">
    <div class="w-full">
      <h2 class="text-lg font-normal">Billettsalget har åpnet</h2>
      <p class="text-4xl font-bold">Sikre deg din billett i dag!</p>
    </div>
    <aside class="mt-6 space-x-2">
      <Button href="https://www.geekevents.org/tg26/#/shop" theme="white">
        Kjøp billett på Geekevents</Button
      >
    </aside>
  </div>
</Hero>
