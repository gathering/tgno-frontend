---
interface Props {
  filename: string;
  url: string;
  alt: string;
  width: number;
  nudge?: "t" | "b" | "l" | "r";
}

const { filename, url, alt, width, nudge } = Astro.props;

// ydnamically import a svg based on the filename prop, and apply a text color to it
---

<a href={url} target="_blank" class="flex justify-center md:min-w-[160px]">
  <img
    src={`/tg25/sponsors/${filename}`}
    alt={alt}
    width={width}
    class={`aspect-thumbnail object-cover ${nudge ? "m" + nudge + "-2" : ""} invert dark:invert-0`}
  />
</a>
