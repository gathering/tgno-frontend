---
interface Props {
  filename: string;
  url: string;
  alt: string;
  width: number;
}

const { filename, url, alt, width } = Astro.props;
---

<a href={url} target="_blank" class="flex justify-center md:min-w-[160px]">
  <img
    src={`/tg25/sponsors/${filename}`}
    alt={alt}
    width={width}
    class="aspect-thumbnail object-cover"
  />
</a>
