---
export interface Props {
  timespan?: string;
  name: string;
  price?: number;
  seatless?: boolean;
}

const { timespan, name, price, seatless = false } = Astro.props;
const formattedPrice = price
  ? new Intl.NumberFormat("nb-NO", {
      style: "currency",
      currency: "NOK",
      maximumFractionDigits: 0,
    }).format(price)
  : "";

const boxStyles = `p-6 rounded-3xl sm:mx-auto sm:rounded-2xl ${price ? "bg-white shadow-lg text-black prose-headings:text-black" : "border border-white text-white"} prose`;
---

<div class={boxStyles}>
  <h4 class="text-2xl">{name}</h4>
  {price ? <h5 class="text-xl">{formattedPrice}</h5> : null}
  <ul class="text-xs list-none bg-black/15 rounded-md p-4">
    <li>
      {
        seatless
          ? "Ingen sitteplass inkludert"
          : "Inkludert sitteplass på på 120 cm"
      }
    </li>
    <li>
      Tilgjengelig {price ? "nå" : "senere"}
    </li>
    <li>
      {
        timespan
          ? `Gir tilgang ${timespan}`
          : `Detaljer om tilgang kommer senere`
      }
    </li>
  </ul>
  <slot />
</div>
