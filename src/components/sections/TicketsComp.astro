---
import Box from "../Box.astro";
---

<Box
  title="Billettsalget er i gang!"
  titleColor="text-black"
  textColor="text-black"
  text="Køen er åpnet, still deg i kø nå for å sikre deg din billett til The Gathering 2025!"
  button={{
    text: "Bli med i køen!",
    link: "https://www.geekevents.org/tg25/#/shop",
    color:
      "border border-orange-500 bg-orange-500 self-center hover:bg-orange-300",
  }}
  secondaryButton={{
    text: "Mer info",
    link: "/tickets",
    color: "border border-orange-500 hover:bg-orange-100",
  }}
  backgroundColor="bg-white"
  withMargin={false}
/>
