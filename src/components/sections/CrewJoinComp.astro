---
import Box from "../Box.astro";

interface Props {
  image: string;
}

const { image } = Astro.props;
---

<section class="relative h-[300px]">
  <img
    src={image}
    alt="Crew beskrivelse bilde"
    class="w-full h-full object-cover rounded-3xl"
  />
  <div
    class="absolute inset-0 flex justify-center items-start sm:items-center sm:p-4"
  >
    <Box
      itemCenter={true}
      title="Vi søker frivillige!"
      titleColor="text-orange-500"
      text="Søk nå, for påskens morsomste utfordring"
      button={{
        text: "Ta utfordringen!",
        link: "https://wannabe.tg.no",
        color: "bg-orange-500 self-center",
      }}
      backgroundColor="bg-black bg-opacity-90"
    />
  </div>
</section>
