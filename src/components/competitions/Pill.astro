---
export interface Props {
  text: string;
  tooltip?: string;
  color?: "orange" | "blue";
  class?: string;
}

const colors = {
  orange: "text-black/80 border-black/20 bg-orange-500",
  blue: "text-black/80 border-black/20 bg-blue-400",
  //orange: "text-orange-500 border-orange-500 bg-orange-500/10",
  //blue: "text-blue-400 border-blue-400 bg-blue-400/10",
};

const colorStyles = colors[Astro.props.color || "orange"];
---

<span
  class=`${colorStyles} border rounded-md px-2 py-1 text-xs font-bold ${Astro.props.class || ""}`
  >{Astro.props.text}</span
>
