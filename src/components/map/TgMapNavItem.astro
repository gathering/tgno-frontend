---
import type { MapItem } from "../../types";
import { slugifyMapItemName } from "../../utils";

type Props = {
  mapItem: Pick<MapItem, "name" | "slug">;
};

const { mapItem } = Astro.props;
---

<li
  class="border border-white px-2 py-1 mb-2 rounded-xl cursor-pointer hover:bg-red-800 focus:bg-red-800"
  data-part="nav-item"
  data-target={mapItem.slug || slugifyMapItemName(mapItem.name)}
>
  {mapItem.name}
</li>
